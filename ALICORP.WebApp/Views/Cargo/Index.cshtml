@{
    ViewBag.Title = "Lista de Cargos";
}

<div class="row">
    <div class="col-12">
        <div class="card card-success-border">
            <div class="card-header">
                <h3 class="card-title"><i class="fab fa-buromobelexperte"></i>&nbsp;@ViewBag.Title</h3>
            </div>
            <div class="card-body">
                <div id="Error"></div>
                <div class="text-right">
                    <button id="btnNuevo" type="button" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i>&nbsp; Nuevo</button>
                </div>
                <hr />
                <div class="table-responsive">
                    <table id="tblCargo" class="table table-sm table-bordered table-hover">
                        <thead>
                            <tr class="bg-primary">
                                <th width="20"></th>
                                <th width="20">#</th>
                                <th width="200">Codigo</th>
                                <th>Descripción</th>
                                <th width="100">Activo</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modal-ventana">
    <div id="ventana-container"></div>
</div>

<script>
    var index = {
        Listar: function () {
            var table = $("#tblCargo");
            $.ajax({
                url: "/Cargo/Listar",
                type: "GET",
                dataType: "json",
                beforeSend: function (xhr) { },
                complete: function () { },
                success: function (data) {
                    if (data.length == 0) table.children('tbody').append("<tr><td colspan='4' class='text-center'>No existen registros</td></tr>");
                    else index.GenerarTabla(table, data);
                },
                error: function (data) {
                    helper.errorShow('#Error', data.responseText)
                }
            });
        },
        GenerarTabla: function (table, lista) {
            var tbody = table.children('tbody');
            tbody.children('tr').remove();
            var rows = '';
            $.each(lista, function (i, r) {
                rows += `<tr>
                            <td><a class="text-warning option editar" data-id="${r.Id}"><i class="fa fa-pencil-alt"></i></a></td>
                            <td class="text-right">${i + 1}</td>
                            <td class="text-center">${ r.Codigo || ""}</td>
                            <td>${ r.Descripcion}</td>
                            <td class="text-center ${r.Activo ? "text-success" : "text-danger"}">${r.Activo ? "SI" : "NO"}</td>
                        </tr>`;
            });
            tbody.append(rows);
        },
        AbrirModal: function (url, model) {
            $.ajax({
                type: "GET",
                url: url,
                data: model,
                cache: false,
                beforeSend: function () {
                    helper.wait.modal('ventana-container');
                    $('#modal-ventana').modal();
                },
                success: function (data) {
                    $('#ventana-container').html(data);
                },
                error: function (result) {
                    $('#modal-ventana').modal('hide');
                    helper.errorShow('#Error', result.responseText);
                }
            });
        }
    };


    $(function () {
        index.Listar();

        $('#btnNuevo').click(function () {
            index.AbrirModal('/Cargo/Nuevo', { callBack: 'SetCargo' });
        });

        $('#tblCargo tbody').delegate('a.editar', 'click', function () {
            var id = this.dataset.id;
            index.AbrirModal('/Cargo/Editar', { callBack: 'SetCargo', id });
        });

    });

    var SetCargo = function () {
        $('#modal-ventana').modal('hide');
        index.Listar();
    }
</script>

