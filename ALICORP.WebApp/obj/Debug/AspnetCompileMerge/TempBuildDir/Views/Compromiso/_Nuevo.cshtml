
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">NUEVA COMPROMISO</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("Nuevo", "Compromiso", FormMethod.Post, new { @id = "form-modal-editar", @class = "container-fluid" }))
            {
            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Reportado por: <span class="text-danger">(*)</span></label>
                        <input class="form-control form-control-sm" disabled="disabled" value="Junior Sulca" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Fecha: <span class="text-danger">(*)</span></label>
                        <input class="form-control form-control-sm" disabled="disabled" value="@DateTime.Today.ToString("dd/MM/yyyy")" />
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label>Reportado desde: <span class="text-danger">(*)</span></label>
                        <input class="form-control form-control-sm" disabled="disabled" value="/ALICORP/PLANTA 1/CELULA 1" />
                    </div>
                </div>
                @*<div class="col-md-4">
                    <div class="form-group">
                        <label>Planta: <span class="text-danger">(*)</span></label>
                        <input class="form-control form-control-sm" disabled="disabled" value="" />
                    </div>
                </div>*@
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Descripción Breve: <span class="text-danger">(*)</span></label>
                        <input class="form-control form-control-sm" autofocus="" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Descripción Detallada: <span class="text-danger">(*)</span></label>
                        <textarea class="form-control form-control-sm" rows="4"></textarea>
                    </div>
                </div>
            </div>
            }
        </div>
        <div id="msgNuevo"></div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="btnGuardarPersona"><i class="fa fa-save"></i>&nbsp; Guardar</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times"></i>&nbsp; Cancelar</button>
        </div>
    </div>
</div>
