
@{
    ViewBag.Title = "Administración de Compromisos";
}

<div class="row">
    <div class="col-12">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-list-alt"></i>&nbsp;Administración de Compromisos</h3>
            </div>
            <div class="card-body">
                <div class="form-row">
                    <div class="col-4">
                        <input class="form-control" placeholder="Ingrese el Código" />
                    </div>
                    <div class="col-4">
                        <input class="form-control" placeholder="Ingrese la breve descripción" />
                    </div>
                    <div class="col-4">
                        <input class="form-control" placeholder="Ingrese la fecha" />
                    </div>
                </div>
                <hr />
                <div class="text-center">
                    <button type="button" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp; Buscar</button>
                    <button type="button" class="btn btn-warning"><i class="fa fa-broom"></i>&nbsp; Limpiar</button>
                </div>

            </div>
        </div>
    </div>
    <div class="col-12">

        <div id="list">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card text-center">
                        <div class="card-header bg-primary">
                            &nbsp;
                        </div>
                        <div class="card-body">
                            <h4 class="card-title float-none">CM-00000004</h4>
                            <p class="font-weight-bold">PROGRAMADO</p>
                            <p class="card-text">Una breve descripcion del compromiso creado</p>
                            <a href="#" class="btn btn-info"><i class="fa fa-pencil-alt"></i>&nbsp; Editar</a>
                        </div>
                        <div class="card-footer text-muted text-center">
                            @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card text-center">
                        <div class="card-header bg-success">
                            &nbsp;
                        </div>
                        <div class="card-body">
                            <h4 class="card-title float-none">CM-00000003</h4>
                            <p class="font-weight-bold">FINALIZADO</p>
                            <p class="card-text">Una breve descripcion del compromiso creado</p>
                            <a href="#" class="btn btn-info"><i class="fa fa-pencil-alt"></i>&nbsp; Editar</a>
                        </div>
                        <div class="card-footer text-muted text-center">
                            @DateTime.Now.AddDays(-7).ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card text-center">
                        <div class="card-header bg-light">
                            &nbsp;
                        </div>
                        <div class="card-body">
                            <h4 class="card-title float-none">CM-00000002</h4>
                            <p class="font-weight-bold">NUEVO</p>
                            <p class="card-text">Una breve descripcion del compromiso creado</p>
                            <a href="#" class="btn btn-info"><i class="fa fa-pencil-alt"></i>&nbsp; Editar</a>
                        </div>
                        <div class="card-footer text-muted text-center">
                            @DateTime.Now.AddDays(-15).ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card text-center">
                        <div class="card-header bg-warning">
                            &nbsp;
                        </div>
                        <div class="card-body">
                            <h4 class="card-title float-none">CM-00000001</h4>
                            <p class="font-weight-bold">PROGRAMADO</p>
                            <p class="card-text">Una breve descripcion del compromiso creado</p>
                            <a href="#" class="btn btn-info"><i class="fa fa-pencil-alt"></i>&nbsp; Editar</a>
                        </div>
                        <div class="card-footer text-muted text-center">
                            @DateTime.Now.AddDays(-20).ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

