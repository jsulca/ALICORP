@{
    ViewBag.Title = "Modelar las Verificaciones";
}
<div class="row">
    <div class="col-12">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-check"></i>&nbsp;Mis verificaciones</h3>
            </div>
            <div class="card-body">
                <div class="form-row">
                    <div class="col-3">
                        <input class="form-control" placeholder="Ingrese el Código" />
                    </div>
                    <div class="col-3">
                        <input class="form-control" placeholder="Ingrese el proceso" />
                    </div>
                    <div class="col-3">
                        <input class="form-control" placeholder="Ingrese el sub-proceso" />
                    </div>
                    <div class="col-3">
                        <input class="form-control" placeholder="Ingrese la fecha" />
                    </div>
                </div>
                <hr />
                <div class="text-center">
                    <button type="button" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp; Buscar</button>
                    <button type="button" class="btn btn-warning"><i class="fa fa-broom"></i>&nbsp; Limpiar</button>
                    <a role="button" href="/ListaVerificacion/Nuevo" class="btn btn-success" id="btnNuevo"><i class="fa fa-plus"></i>&nbsp; Nuevo</a>
                </div>
                <hr />
                <div class="table-responsive">
                    <table class="table table-bordered table-sm table-nowrap">
                        <thead>
                            <tr class="bg-success text-center">
                                <th width="88"></th>
                                <th width="20">#</th>
                                <th width="100">Código</th>
                                <th width="150">Proceso</th>
                                <th width="150">Sub-Proceso</th>
                                <th>Descripción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <ul class="list-inline mb-0">
                                        <li class="list-inline-item"><button class="btn btn-sm btn-warning"><i class="fa fa-pencil-alt"></i></button></li>
                                        <li class="list-inline-item"><button class="btn btn-sm btn-info"><i class="fa fa-eye"></i></button></li>
                                    </ul>
                                </td>
                                <td class="text-right">1</td>
                                <td class="text-center"><a href="javascript:void(0)">EN-000001</a></td>
                                <td>CDR</td>
                                <td>DdD</td>
                                <td>Encuesta para Ingeniero</td>
                            </tr>
                            <tr>
                                <td>
                                    <ul class="list-inline mb-0">
                                        <li class="list-inline-item"><button class="btn btn-sm btn-warning"><i class="fa fa-pencil-alt"></i></button></li>
                                        <li class="list-inline-item"><button class="btn btn-sm btn-info"><i class="fa fa-eye"></i></button></li>
                                    </ul>
                                </td>
                                <td class="text-right">2</td>
                                <td class="text-center"><a href="javascript:void(0)">EN-000002</a></td>
                                <td>CDR</td>
                                <td>Rdp</td>
                                <td>Encuesta para Jefe de Producción</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
