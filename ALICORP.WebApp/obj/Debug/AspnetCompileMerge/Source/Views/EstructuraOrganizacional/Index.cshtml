
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/plugins/jstree/css/style.min.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-sitemap"></i>&nbsp;Estructura Organizacional</h3>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <button class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp; Nuevo</button>
                    <button class="btn btn-warning"><i class="fa fa-pencil-alt"></i>&nbsp; Editar</button>
                </div>
                <hr />
                <div id="arbol"></div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/plugins/jstree/js/jstree.min.js"></script>
<script>
    var data = {
        "id": "0",
        "text": "ALICORP",
        "icon": "fa fa-sitemap",
        "state": { "selected": true },
        "children": [
            {
                "id": "1",
                "text": "PLANTA CALLAO",
                "icon": "fa fa-boxes",
                "children": [
                    {
                        "id": "11",
                        "text": "MANUFACTURA",
                        "icon": "fa fa-table",
                        "children": [
                            {
                                "id": "111",
                                "text": "LINEA DE HARINAS",
                                "icon": "fa fa-box",
                            },
                            {
                                "id": "112",
                                "text": "LINEA DE GALLETAS",
                                "icon": "fa fa-box",
                            },
                            {
                                "id": "113",
                                "text": "LINEA DE ACEITES",
                                "icon": "fa fa-box",
                            }
                        ]
                    },
                    {
                        "id": "12",
                        "text": "DISTRIBUCIÓN",
                        "icon": "fa fa-table",
                        "children": [
                            {
                                "id": "121",
                                "text": "CENTRO DE DISTRIBUCIÓN 1",
                                "icon": "fa fa-box",
                            },
                            {
                                "id": "122",
                                "text": "CENTRO DE DISTRIBUCIÓN 2",
                                "icon": "fa fa-box",
                            }
                        ]
                    }
                ]
            }
        ]
    };

    $(function () {
        $('#arbol').jstree({
            "plugins": ["wholerow"],
            "core": {
                "data": data,
                "animation": '1',
                "themes": {
                    name: 'proton',
                    responsive: true
                }
            }
        }).on('ready.jstree', function (e, data) {
            $("#arbol").jstree('open_all');
        });
    });
</script>